#include <stdio.h>

int main(void)
{
  int score;
  
  printf("点数(100点満点): ");
  scanf("%d", &score);
  // "点数(100点満点): "という入力プロンプトを印字;
  // scanfでint型の値を標準入力から読み込み score に代入;
  
  if(score<0 || score>100){
    printf("入力エラーです．");
	  // "入力エラーです．" と標準出力へ表示．;
  }else if(score>=90){
    printf("あなたの評価値はA+です．");
	  // "あなたの評価値はA+です．" と標準出力へ表示．;
  }else if(score>=80){
    printf("あなたの評価値はAです．");
	  // "あなたの評価値はAです．" と標準出力へ表示．;
  }else if(score>=70){
    printf("あなたの評価値はBです．");
	  // "あなたの評価値はBです．" と標準出力へ表示．;
  }else if(score>=60){
    printf("あなたの評価値はCです．");
	  // "あなたの評価値はCです．" と標準出力へ表示．;
  }else{
    printf("あなたの評価値はFです．");
	  // "あなたの評価値はFです．" と標準出力へ表示．;
  }
  
  return 0;
}
