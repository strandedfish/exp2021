#include <stdio.h>
#include <stdlib.h>
#define MAX_NUM (8)     //最大データ数

int
main(void)
{
  int array[MAX_NUM];  //配列の宣言, 要素数の最大値はMAX_NUM
  int i;               //ループカウンタ
  int max, index;   //バッファー、最大要素のindex
  
  /* キーボードからのデータの入力 */
  for(i = 0; i < MAX_NUM; i++) {
    printf("%d番目のデータ:", i);
    scanf("%d", &array[i]); /* 整数を入力し、array[i]に代入する */
  }

  /* 最大要素の探索 */
  max = array[0];
  index = 0;
  for(i = 1; i < MAX_NUM; i++){
    if(array[i] > max) {
      max = array[i];
      index = i;
    }
  }

  printf("最大の要素は%dで、そのインデックスは%dである。", max, index);
	
  return 0;
}

